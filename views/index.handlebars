<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-lg">
      <h1>EAT DA BURGER</h1>
      <img width="150"
        src="https://lh3.googleusercontent.com/proxy/m_ODodLoBIHaQjvN0I4p2z2ONz5I5_5HRIiVFd1E4rRGtablM_hSYO7CXIlNRijdfvilMzkpI7ecXRqEGZXPJRf1DA">





    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">
      <h2>Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h2>Devoured</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/devoured-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-center">
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
    <button type="submit" type="radio" name="sleepy" value="1">Add</button>
  </div>
</form>
</div>